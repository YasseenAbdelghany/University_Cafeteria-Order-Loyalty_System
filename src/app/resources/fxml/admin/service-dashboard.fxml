<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080" prefWidth="1920" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.gui.admin.controllers.ServiceDashboardController"
            styleClass="root"
            stylesheets="@../../css/themes/admin-theme.css">
    
    <!-- Top Header -->
    <top>
        <VBox spacing="10" styleClass="card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Service Manager Portal" styleClass="header-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Welcome," style="-fx-font-size: 14px;"/>
                <Label fx:id="managerNameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Role:" style="-fx-font-size: 12px;"/>
                <Label fx:id="managerTypeLabel" styleClass="badge"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Left Side - Action Buttons -->
    <left>
        <VBox fx:id="actionsVBox" spacing="10" minWidth="200" styleClass="card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Actions" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Separator/>
            <!-- Dynamic buttons will be added here based on manager type -->
        </VBox>
    </left>
    
    <!-- Center - Content Area -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="contentArea" spacing="15" styleClass="card">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Select an action from the menu" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Bottom - Logout Button -->
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Logout" onAction="#handleLogout" styleClass="secondary-button"/>
        </HBox>
    </bottom>
    
</BorderPane>
