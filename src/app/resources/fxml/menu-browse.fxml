<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="app.gui.controllers.MenuBrowseController"
            styleClass="root" stylesheets="@../css/cafeteria-theme.css">
    
    <!-- Top: Header -->
    <top>
        <VBox styleClass="header-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Menu &amp; Order" styleClass="header-label"/>
            <Label fx:id="studentInfoLabel" text="Student: Loading..." styleClass="subheader-label"/>
        </VBox>
    </top>
    
    <!-- Center: Menu Table -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <Label text="Available Menu Items" styleClass="section-label"/>
            
            <TableView fx:id="menuTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200" />
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="80" />
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100" />
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100" />
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="100" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
    <!-- Right: Shopping Cart -->
    <right>
        <VBox spacing="15" styleClass="card" prefWidth="300">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Shopping Cart" styleClass="section-label"/>
            
            <!-- Cart Items List -->
            <ListView fx:id="cartListView" VBox.vgrow="ALWAYS" prefHeight="200"/>
            
            <!-- Separator -->
            <Separator/>
            
            <!-- Order Summary -->
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Subtotal:" styleClass="label-bold"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="subtotalLabel" text="0.00 EGP" styleClass="label-bold"/>
                </HBox>
                
                <HBox spacing="10">
                    <Label text="Available Points:" styleClass="label-bold"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="availablePointsLabel" text="0" styleClass="badge"/>
                </HBox>
                
                <!-- Points Redemption -->
                <VBox spacing="5">
                    <Label text="Redeem Points:" styleClass="label-small"/>
                    <HBox spacing="10">
                        <TextField fx:id="pointsRedemptionField" promptText="Enter points" 
                                   prefWidth="120"/>
                        <Button text="Apply" onAction="#handleRedeemPoints" 
                                styleClass="secondary-button"/>
                    </HBox>
                    <Label fx:id="discountLabel" text="Discount: 0.00 EGP" 
                           styleClass="success-message"/>
                </VBox>
                
                <Separator/>
                
                <HBox spacing="10">
                    <Label text="Total:" styleClass="header-label-small"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalLabel" text="0.00 EGP" styleClass="header-label-small"/>
                </HBox>
            </VBox>
            
            <!-- Action Buttons -->
            <VBox spacing="10">
                <Button fx:id="checkoutButton" text="Checkout" onAction="#handleCheckout" 
                        styleClass="primary-button" maxWidth="Infinity" disable="true"/>
                <Button text="Back to Dashboard" onAction="#handleBack" 
                        styleClass="secondary-button" maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </right>
    
</BorderPane>
