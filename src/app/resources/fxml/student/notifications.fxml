<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="app.gui.student.controllers.NotificationsController"
            styleClass="root" stylesheets="@../../css/themes/student-theme.css">
    
    <!-- Header Section -->
    <top>
        <VBox styleClass="card" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Your Notifications" styleClass="header-label"/>
        </VBox>
    </top>
    
    <!-- Main Content - Notifications List -->
    <center>
        <VBox spacing="15" styleClass="content-area">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <ListView fx:id="notificationsListView" styleClass="notification-list" 
                      VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
    
    <!-- Bottom Section - Action Buttons -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" styleClass="footer">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Button fx:id="markAllReadButton" text="Mark All as Read" 
                    onAction="#handleMarkAllRead" styleClass="primary-button" 
                    prefWidth="180"/>
            
            <Button fx:id="backButton" text="Back" 
                    onAction="#handleBack" styleClass="secondary-button" 
                    prefWidth="150"/>
        </HBox>
    </bottom>
    
</BorderPane>
